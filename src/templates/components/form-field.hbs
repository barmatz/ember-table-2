<div class="form-group {{if error "has-error"}}">
  <label class="col-sm-2 control-label" for={{id}}>{{label}}</label>
  <div class="col-sm-10">
    {{#if hasBlock}}
      {{yield}}
    {{else}}
      {{#if isAutoComplete}}
        {{auto-complete value=value placeholder=placeholder optionLabelPath=optionLabelPath getAsyncResults="getAsyncResults"}}
      {{else if isSelect}}
        {{view "select" class="form-control" id=id selection=value prompt=placeholder content=content optionLabelPath=optionLabelPath optionValuePath=optionValuePath}}
      {{else if isTextArea}}
        {{textarea class="form-control" id=id value=value placeholder=placeholder}}
      {{else}}
        {{input class="form-control" id=id value=value placeholder=placeholder}}
      {{/if}}
    {{/if}}
  </div>

    <div class="col-sm-10 col-sm-offset-2 text-danger">
      {{#if error}}
        {{error}}
      {{/if}}
    </div>
</div>